<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradientune"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    tools:context=".HomePage">

    <RelativeLayout
        android:id="@+id/Navbar"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="#1B1D29"

        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:elegantTextHeight="true"
            android:fontFamily="@font/amita_bold"
            android:text="FinAid"
            android:textAlignment="center"
            android:textColor="@color/primarypurple"
            android:textSize="60sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="170dp"

        android:backgroundTint="#0b8793"
        android:fontFamily="@font/abeezee"
        android:text="In-hand Salary Calculator"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Navbar"
        app:layout_constraintVertical_bias="0.268" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:backgroundTint="#004e92"

        android:fontFamily="@font/abeezee"
        android:text="Interest Calculator"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/Navbar"
        app:layout_constraintVertical_bias="0.268" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:backgroundTint="#f46b45"
        android:fontFamily="@font/abeezee"

        android:textAllCaps="false"
        android:textSize="25sp"
        android:text="Inflation Calculator"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.235" />

    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:backgroundTint="#f01fb1"

        android:fontFamily="@font/abeezee"
        android:text="Loan Calculator"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.236" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#4b484f"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Navbar"
        app:layout_constraintVertical_bias="0.998">

        <TableRow
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_round_home_24"
            android:clickable="true"
            android:contentDescription="Home" />

        <TableRow
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_round_manage_search_24"
            android:clickable="true"
            android:contentDescription="Home"
            android:focusable="auto" />

        <TableRow
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_outline_analytics_24"
            android:clickable="true"
            android:contentDescription="Home" />

        <TableRow
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_outline_person_pin_24"
            android:clickable="true"
            android:contentDescription="Home" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elegantTextHeight="true"
        android:fontFamily="@font/elsie_swash_caps"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Navbar"
        app:layout_constraintVertical_bias="0.069" />
</androidx.constraintlayout.widget.ConstraintLayout>